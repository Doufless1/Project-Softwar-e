@page "/"
@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime

@using System.Text.Json
@using System.Text.Json.Serialization
@using Microsoft.JSInterop

@rendermode InteractiveServer



<!DOCTYPE html>
<html>
<head>
  <title>Weather Data Chart</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>
    <button class="btn device-button" style="display: block; margin-bottom: 10px;" onclick="callApiJS('lht-saxion')" data-value="ibfkloranew">ibfkloranew</button>
    <button class="btn device-button" style="display: block; margin-bottom: 10px;" onclick="callApiJS('lht-saxion')" data-value="lht-saxion">lht-saxion</button>
    <button class="btn device-button" style="display: block; margin-bottom: 10px;" onclick="callApiJS('lht-gronau')" data-value="lht-gronau">lht-gronau</button>
    <button class="btn device-button" style="display: block; margin-bottom: 10px;" onclick="callApiJS('lht-wierden')" data-value="lht-wierden">lht-wierden</button>
    <button class="btn device-button" style="display: block; margin-bottom: 10px;" onclick="callApiJS('mkr-wierden')" data-value="mkr-wierden">mkr-wierden</button>
    <button class="btn device-button" style="display: block; margin-bottom: 10px;" onclick="callApiJS('mkr-saxion')" data-value="mkr-saxion">mkr-saxion</button>


    
  <!-- First Row: Chart Type -->
  <div class="container">
    <div class="tabs" id="dataTabs">
        <div class="tab type active" data-value="insideTemperature">Inside Temperature</div>
        <div class="tab type" data-value="outsideTemperature">Outside Temperature</div>
        <div class="tab type" data-value="humidity">Humidity</div>
        <div class="tab type" data-value="luminocity">Luminocity</div>
        <div class="tab type" data-value="airPressure">Air Pressure</div>
    </div>

    <!-- Second Row: Dataset Selection -->
    <div class="tabs" id="timeTabs">
        <div class="tab range active" data-value="day">Day</div>
        <div class="tab range" data-value="week">Week</div>
        <div class="tab range" data-value="month">Month</div>
    </div>

    <!-- Chart Container -->
    <canvas id="myChart"></canvas>
  </div>
  
</body>
</html>


<script type="module">
    import { initializeChart, updateChartData, toggleCityData, updateChartInfo} from '/weatherChart.js'

    let currentDataType = 'insideTemperature';
    let currentTimeRange = 'day';
    let currentDevice = 'lht-saxion';

    initializeChart();

    document.querySelectorAll('#dataTabs .type').forEach(tab => {
        tab.addEventListener('click', () => {
            updateData(tab.dataset.value)
        })
    })
    document.querySelectorAll('#timeTabs .range').forEach(tab => {
        tab.addEventListener('click', () => {
            updateTimeRange(tab.dataset.value)
        })
    })
    document.querySelectorAll('.btn').forEach(button => {
        button.addEventListener('click', () => {
            toggleCityData(button.dataset.value, currentDataType,currentTimeRange)
            currentDevice = button.dataset.value;
        })
    })
    // Update Data Type
    function updateData(type) {
        currentDataType = type;
        //remove highlighted tab
        document.querySelectorAll('#dataTabs .tab').forEach(tab => tab.classList.remove('active'));
        //Highlighted new wtab
        document.querySelector(`#dataTabs .tab[data-value="${type}"]`).classList.add('active');
        updateChartData(currentDataType, currentTimeRange);

        updateChartInfo(currentDevice, currentTimeRange, currentDataType);
    }


    // Update Time Range
    function updateTimeRange(range) {
        currentTimeRange = range;
        //remove highlighted tab
        document.querySelectorAll('#timeTabs .tab').forEach(tab => tab.classList.remove('active'));
        //Highlighted new tab
        document.querySelector(`#timeTabs .tab[data-value="${range}"]`).classList.add('active');
        updateChartData(currentDataType, currentTimeRange);
    }
</script>