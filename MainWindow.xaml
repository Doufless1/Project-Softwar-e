<Window x:Class="Weather_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:weatherApp="clr-namespace:Weather_App"
        Title="Weather App" Height="450" Width="800">
    <Window.DataContext>
        <weatherApp:MainWindow />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0">
            <Run Text="Weather App" FontWeight="Bold" FontSize="24" />
            <Run Text=" - " />
            <!-- <Run Text="{Binding CurrentDay}" FontWeight="Bold" /> -->
        </TextBlock>
        <TabControl Grid.Row="1">
            <!-- Temperature Graph -->
            <TabItem Header="Temperature today">
                <wpf:CartesianChart
                    Series="{Binding TemperatureDaySeries}"
                    XAxes="{Binding XAxes}" />
            </TabItem>
            
            <!-- Humidity Graph -->
            <TabItem Header="Humidity today">
                <wpf:CartesianChart
                    Series="{Binding HumidityDaySeries}"
                    XAxes="{Binding XAxes}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>